import java.util.Random;

public class Dado {
    private int valor;

    public Dado() {
        this.valor = 1; // valor inicial
    }

    public int rolar() {
        Random random = new Random();
        this.valor = random.nextInt(6) + 1; // Gera n√∫mero entre 1 e 6
        return this.valor;
    }

    public int getValor() {
        return valor;
    }

    @Override
    public String toString() {
        return "Resultado do dado: " + valor;
    }
}
